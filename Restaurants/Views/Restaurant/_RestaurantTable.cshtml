@using System.Collections.Generic
@using Restaurants.Models
@model List<Restaurant>

<table>
  <thead>
    <tr>
      <th></th>
      <th>ID</th>
      <th>Cuisine</th>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    @if (Model.Count == 0)
    {
      <tr><td colspan="4">No restaurants Yet</td></tr>
    }

    @foreach (Restaurant restaurant in Model)
    {
      <tr>
        <td>
          <a 
            asp-action="Delete"
            asp-route-restaurantId="@restaurant.Id"
            class="btn btn-danger"
          >Delete</a>
        </td>
        <td>@restaurant.Id</td>
        <td>@restaurant.Cuisine.Name</td>
        <td>@restaurant.Name</td>
        <td>@restaurant.Description</td>
      </tr>
    }
  </tbody>
</table>
